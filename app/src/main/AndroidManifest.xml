<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="m.kampukter.travelexpenses">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme"
                 android:name=".MainApplication">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.NewExpensesActivity"
                  android:label="NewExpensesActivity"
                  android:parentActivityName=".ui.MainActivity"
                  android:windowSoftInputMode="adjustResize"
        >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.MainActivity">
            </meta-data>
        </activity>
        <activity android:name=".ui.ExpenseActivity"
                  android:label="ExpenseActivity"
                  android:parentActivityName=".ui.NewExpensesActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.NewExpensesActivity">
            </meta-data>
        </activity>
    </application>

</manifest>
